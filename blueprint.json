[{
	"name": "testblueprint",
	"author": "l.beaton@f5.com",
	"version": "0.9",
	"environment": {
		"base-cidr": "10.0.0.0/16",
		"networks": [{
			"name": "main_network",
			"cidr": "10.0.0.1/24",
			"has-dhcp": true,
			"dhcp-range": "10.0.0.30-10.0.0.200"
		},
		{
			"name": "admin_network",
			"cidr": "10.0.10.0/24",
			"has-dhcp": true,
			"dhcp-range": "10.0.10.30-10.0.10.200"
		}],
		"instances": [{
			"name": "nginx_frontend",
			"tested-os": [
				"Ubuntu 22.04",
				"Ubuntu 20.04"
			],
			"recommended-ram": "3GB",
			"recommended-cpu": "2 cores",
			"recommended-aws-instance-type": "t3.medium",
			"recommended-aws-image": "ami-05f1fedd8287cef0b",			
			"requires-static-ip": true,
			"recommended-optimization": "Balanced",
			"disable-root": false,
			"enable-ssh": true,
			"nics": [{
				"0": "main_network",
				"1": "admin_network"
			}],
			"security-group-rule": [{

				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 80,
				"targetport": 80,
				"friendly": "HTTP Access"
			}, {
				"source-cidr": "128.0.0.0/1",
				"proto": "tcp",
				"sourceport": 80,
				"targetport": 80,
				"friendly": "HTTP Access"
			}, {
				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 443,
				"targetport": 443,
				"friendly": "HTTPS Access"
			}, {
				"source-cidr": "128.0.0.0/1",
				"proto": "tcp",
				"sourceport": 443,
				"targetport": 443,
				"friendly": "HTTPS Access"
			}, {
				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 8080,
				"targetport": 8080,
				"friendly": "HTTP Access on port 8080"
			}, {
				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 22,
				"targetport": 22,
				"friendly": "SSH Access"
			}, {
				"source-cidr": "128.0.0.0/1",
				"proto": "tcp",
				"sourceport": 22,
				"targetport": 22,
				"friendly": "SSH Access"
			}],
			"required-licenses": [{
				"NGINX Plus": {
					"name": "nginx-repo",
					"accepted-formats": [
						"crt",
						"key"
					],
					"trial-url": "https://www.nginx.com/free-trial-request/",
					"target-directory": "/etc/ssl/nginx",
					"expected-files": [
						"nginx-repo.crt",
						"nginx-repo.key"
					]
				}
			}],
			"filecopy": [{
					"source": "scripts/nginx_frontend_firstboot.sh",
					"target": "~/initscripts/",
					"requires-reboot": false,
					"postcopy-actions": [{
						"runscript": "once"
					}]
				},
				{
					"source": "scripts/nginx_frontend_eachboot.sh",
					"target": "/var/bootscripts/",
					"requires-sudo": true,
					"requires-reboot": false,
					"postcopy-actions": [{
						"runscript": "eachboot"
					}]
				},
				{
					"source": "config/nginx_frontend_nginx.conf",
					"target": "/etc/nginx/conf.d/",
					"requires-sudo": true,
					"requires-reboot": false,
					"postcopy-actions": [{
						"exec-command": "nginx -s reload"
					}]
				}
			]
		},
		{
			"name": "nginx_backend",
			"tested-os": [
				"Ubuntu 22.04",
				"Ubuntu 20.04"
			],
			"recommended-ram": "2GB",
			"recommended-cpu": "2 cores",			
			"recommended-aws-instance-type": "t3.medium",
			"recommended-aws-image": "ami-05f1fedd8287cef0b",
			"requires-static-ip": false,
			"recommended-optimization": "Balanced",
			"disable-root": false,
			"enable-ssh": true,
			"nics": [{
				"0": "main_network",
				"1": "admin_network"
			}],
			"security-group-rule": [{

				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 80,
				"targetport": 80,
				"friendly": "HTTP Access"
			}, {
				"source-cidr": "128.0.0.0/1",
				"proto": "tcp",
				"sourceport": 80,
				"targetport": 80,
				"friendly": "HTTP Access"
			}, {
				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 443,
				"targetport": 443,
				"friendly": "HTTPS Access"
			}, {
				"source-cidr": "128.0.0.0/1",
				"proto": "tcp",
				"sourceport": 443,
				"targetport": 443,
				"friendly": "HTTPS Access"
			}, {
				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 8080,
				"targetport": 8080,
				"friendly": "HTTP Access on port 8080"
			}, {
				"source-cidr": "0.0.0.0/1",
				"proto": "tcp",
				"sourceport": 22,
				"targetport": 22,
				"friendly": "SSH Access"
			}, {
				"source-cidr": "128.0.0.0/1",
				"proto": "tcp",
				"sourceport": 22,
				"targetport": 22,
				"friendly": "SSH Access"
			}],
			"required-licenses": [{
				"NGINX Plus": {
					"name": "nginx-repo",
					"accepted-formats": [
						"crt",
						"key"
					],
					"trial-url": "https://www.nginx.com/free-trial-request/",
					"target-directory": "/etc/ssl/nginx",
					"expected-files": [
						"nginx-repo.crt",
						"nginx-repo.key"
					]
				}
			}],
			"filecopy": [{
					"source": "scripts/nginx_backend_firstboot.sh",
					"target": "~/initscripts/",
					"requires-reboot": false,
					"postcopy-actions": [{
						"runscript": "once"
					}]
				},
				{
					"source": "scripts/nginx_backend_eachboot.sh",
					"target": "/var/bootscripts/",
					"requires-sudo": true,
					"requires-reboot": false,
					"postcopy-actions": [{
						"runscript": "eachboot"
					}]
				},
				{
					"source": "config/nginx_backend_nginx.conf",
					"target": "/etc/nginx/conf.d/",
					"requires-sudo": true,
					"requires-reboot": false,
					"postcopy-actions": [{
						"exec-command": "nginx -s reload"
					}]
				}
			]
		}]
	}
}]
